@model CalculatorViewModel
@using (Html.BeginForm("Index", "Calculator", FormMethod.Post, new { id = "form-home", @class = "for-horizontal", role = "form" }))
   {
       
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Calculate my rates</h3>
    </div>
    <div class="card-body p-3">
        <div class="row">
        <div class="col-md-12">
     
            <div class="form-group mb-4 row">
                @Html.LabelFor(model => model.OccupationGroupId, htmlAttributes: ModelConstant.LabelRequired)
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.OccupationGroupId, Model.OccupationGroups, htmlAttributes: ModelConstant.FormControlInp)
                    @Html.ValidationMessageFor(model => model.OccupationGroupId)
                </div>
            </div> <!--Title-->

            <div class="form-group mb-4 row">
                @Html.LabelFor(model => model.OccupationId, htmlAttributes: ModelConstant.LabelRequired)
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.OccupationId, Model.Occupations, htmlAttributes: ModelConstant.FormControlInp)
                    @Html.ValidationMessageFor(model => model.OccupationId)
                </div>
            </div><!--First Name-->

            <div class="form-group mb-4 row">
                @Html.LabelFor(model => model.WorkingHours, htmlAttributes: ModelConstant.LabelRequired)
                <div class="col-md-8">
                            <div class="input-group">
                                @Html.EditorFor(model => model.WorkingHours, new { htmlAttributes =  new { @class = "input-rate form-control input-sm",max="24" ,maxlength="2"  }})

                                <span class="">
                                    <button class="btn btn-default" type="button">/day</button>
                                </span>
                            </div>
                    @Html.ValidationMessageFor(model => model.WorkingHours)
                </div>
            </div> <!--Surname-->
            <div class="form-group mb-4 row">
                @Html.LabelFor(model => model.DaysPerWeek, htmlAttributes: ModelConstant.LabelRequired)
                <div class="col-md-8">
                            <div class="input-group">
                                @Html.EditorFor(model => model.DaysPerWeek, new { htmlAttributes =  new { @class = "input-rate form-control input-sm",max="7" ,maxlength="1"  } })
                                <span class="">
                                    <button class="btn btn-default" type="button">/week</button>
                                </span>
                            </div>
                    @Html.ValidationMessageFor(model => model.DaysPerWeek)
                </div>
            </div><!--Other Name-->
            <div class="form-group mb-4 row">
                        @Html.LabelFor(model => model.Salary, htmlAttributes: ModelConstant.LabelRequired)
                <div class="col-md-8">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "input-rate form-control input-sm",max="10000" ,maxlength="5"  } })
                                <span class="">
                                    <button class="btn btn-default" type="button">/hour</button>
                                </span>
                            </div>
                    @Html.ValidationMessageFor(model => model.Salary)
                </div>
            </div><!--First Name-->

            </div>
        </div>
    </div>

    <div class="card-footer">
            <input id="SectorId" name="SectorId" value="1" type="hidden">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group pull-right">
                <button type="submit" class="btn btn-md btn-primary">Calculate</button>
                <button id="btn-refresh" type="reset" class="btn btn-md btn-deafult">
                    <i class="fa fa-refresh" aria-hidden="true"></i>&nbsp;Refresh
                </button>
                </div>
            </div>
        </div>
       
    </div>

    </div>
}