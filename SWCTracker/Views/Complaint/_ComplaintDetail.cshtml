@model ComplaintViewModel

    <div id="step-14" class="">

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-3">
                    <h4>Details of Dispute procedures followed Address</h4>
                </div>


                    <div class="col-md-8">
                    <input id="inputProcessCompliant" type="hidden" value="@Model.ComplaintDetail.ProcessCompliant.ToBoolString()" />
                        <div class="form-group">
                        @Html.LabelFor(model => model.ComplaintDetail.ProcessCompliant, new { @class = "control-label col-md-8 input-sm" })
                            <div class="col-md-4">
                                <label class="radio-inline">
                                <input type="radio" name="ComplaintDetail.ProcessCompliant" value="true"> Yes
                                </label>
                                <label class="radio-inline">
                                <input type="radio" name="ComplaintDetail.ProcessCompliant" value="false"> No
                                </label>
                            </div>
                        </div><!--form group-->

                    </div>

            </div><!--div-row-is same as head office check-->
        </div>
        <div id="div-postal-address" style="display:none" class="card-body">


            <div class="row">

                <div class="col">

                    <div class="form-group row">
                        @Html.LabelFor(model => model.ComplaintDetail.ProcessDescription, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.ComplaintDetail.ProcessDescription, new { @class = "form-control input-sm", @rows = 6 })
                            @Html.ValidationMessageFor(model => model.ComplaintDetail.ProcessDescription)
                        </div>
                    </div>

                </div> <!--div-col-md-6 -->

            </div><!--div-col-md-6 -->

        </div> <!--div-col-md-12 -->
    </div><!--Panel -->

    <div class="m-0">
        <div class="form-label">Sector</div>
        <div class="custom-controls-stacked">
            <label class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1" checked="">
                <span class="custom-control-label">Civil Engineering</span>
            </label>
            <label class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="example-checkbox2" value="option2">
                <span class="custom-control-label">Plant Hire</span>
            </label>
            <label class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="example-checkbox3" value="option3" disabled="">
                <span class="custom-control-label">Open Cast Mining</span>
            </label>
            <label class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="example-checkbox4" value="option4" checked="" disabled="">
                <span class="custom-control-label">Temporary Employment Services</span>
            </label>
        </div>
    </div>
        <div class="mb-0 justify-content-end">
            <div class="">
                <label class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" name="example-checkbox2" value="option2">
                    <span class="custom-control-label">I herewith confirm that the information provided within this form is true and correct.</span>
                </label>
            </div>
        </div>
