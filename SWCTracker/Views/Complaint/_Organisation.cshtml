@model ComplaintViewModel
<div id="step-12" class="">
    <div class="card border-left-primary">
        <div class="card-header">
            <h3 class="card-title">Personal Information</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">


                    <div class="form-group mb-4 row">
                        @Html.LabelFor(model => model.Organisation.Name, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Organisation.Name, new { htmlAttributes = ModelConstant.FormControlInp })
                            @Html.ValidationMessageFor(model => model.Organisation.Name)
                        </div>
                    </div><!--First Name-->

                    <div class="form-group mb-4 row">
                        @Html.LabelFor(model => model.Organisation.Contact, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Organisation.Contact, new { htmlAttributes = ModelConstant.FormControlInp })
                            @Html.ValidationMessageFor(model => model.Organisation.Contact)
                        </div>
                    </div> <!--Surname-->
                </div>
                <div class="col-md-6">


                    <div class="form-group mb-4 row">
                        @Html.LabelFor(model => model.Organisation.Email, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Organisation.Email, new { htmlAttributes = ModelConstant.FormControlInp })
                            @Html.ValidationMessageFor(model => model.Organisation.Email)
                        </div>
                    </div>
                    <div class="form-group mb-4 row">
                        @Html.LabelFor(model => model.Organisation.CellPhone, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Organisation.CellPhone, new { htmlAttributes = ModelConstant.FormControlInpContactNo })
                            @Html.ValidationMessageFor(model => model.Organisation.CellPhone)
                        </div>
                    </div>
                    <div class="form-group mb-4 row">
                        @Html.LabelFor(model => model.Organisation.WorkTelephone, htmlAttributes: ModelConstant.LabelStandard)
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Organisation.WorkTelephone, new { htmlAttributes = ModelConstant.FormControlInpContactNo })
                            @Html.ValidationMessageFor(model => model.Organisation.WorkTelephone)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-left-primary">
        <div class="card-header">
            <h3 class="card-title">Company Address</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group mb-4 row">
                        @Html.LabelFor(m => m.Organisation.Address.Line1, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.Organisation.Address.Line1, new { htmlAttributes = ModelConstant.FormControlInp })
                            @Html.ValidationMessageFor(m => m.Organisation.Address.Line1)
                        </div>
                    </div>
                    <div class="form-group mb-4 row">
                        @Html.LabelFor(m => m.Organisation.Address.Line2, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.Organisation.Address.Line2, new { htmlAttributes = ModelConstant.FormControlInp })
                            @Html.ValidationMessageFor(m => m.Organisation.Address.Line2)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group mb-4 row">
                        @Html.LabelFor(m => m.Organisation.Address.Suburb, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.Organisation.Address.Suburb, new { htmlAttributes = ModelConstant.FormControlInp })
                            @Html.ValidationMessageFor(m => m.Organisation.Address.Suburb)
                        </div>
                    </div>

                    <div class="form-group mb-4 row">
                        @Html.LabelFor(m => m.Organisation.Address.Code, htmlAttributes: ModelConstant.LabelStandard)
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.Organisation.Address.Code, new { htmlAttributes = new { @class = "form-control input-sm number-only", @maxlength = 10 } })
                            @Html.ValidationMessageFor(m => m.Organisation.Address.Code)
                        </div>
                    </div>

                    <div class="form-group mb-4 row">
                        @Html.LabelFor(m => m.Organisation.Address.CityId, htmlAttributes: ModelConstant.LabelRequired)
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.Organisation.Address.CityId, Model.NextOfKin.Address.Cities, htmlAttributes: ModelConstant.FormControlInp)
                            @Html.ValidationMessageFor(m => m.NextOfKin.Address.CityId)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>